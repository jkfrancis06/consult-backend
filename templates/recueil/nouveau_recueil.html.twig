{% extends 'nav.html.twig' %}

{% block body %}

<div class="container-fluid" style="margin-top: 1em">
    <div class="row d-flex justify-content-center" >
        <div class="col col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="{{ path('home') }}">Tableau de bord</a></li>
                    <li class="breadcrumb-item">Mes Recueils</li>
                    <li class="breadcrumb-item">Creer un recueil</li>
                </ol>
            </nav>
        </div>
        <div class="col col-md-12 col-lg-6">
            <div class="card" >
                <div class="card-body">
                    <h5 class="card-title">Creer un recueil</h5>
                    <hr>
                    {{ form_start(form) }}
                    <div class="mb-3">
                        {{ form_label(form.lienPost, "Lien du post : ", {'label_attr': {'class': 'char_label'}}) }}
                        {{ form_widget(form.lienPost, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="mb-3">
                        {{ form_label(form.nature, "Nature : ", {'label_attr': {'class': 'char_label'}}) }}
                        {{ form_widget(form.nature, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="mb-3">
                        {{ form_label(form.contenu, "Contenu : ", {'label_attr': {'class': 'char_label'}}) }}
                        {{ form_widget(form.contenu, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.source, "Source : ", {'label_attr': {'class': 'char_label'}}) }}
                        {{ form_widget(form.source, {'attr': {'class': 'form-control form-select'}}) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.categorie, "Categorie : ", {'label_attr': {'class': 'char_label'}}) }}
                        {{ form_widget(form.categorie, {'attr': {'class': 'form-control form-select'}}) }}
                    </div>

                    <hr style="margin-top: 2rem">
                    <div class="col col-12">
                        <div class="row">
                            <div class="col col-6">
                                {{ form_row(form.cancel,{'attr':{'class': 'btn btn-outline-secondary btn-recueil'}}) }}
                            </div>
                            <div class="col col-6">
                                {{ form_row(form.submit,{'attr':{'class': 'btn btn-outline-success btn-recueil'}}) }}
                            </div>
                        </div>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}
