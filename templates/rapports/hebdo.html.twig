<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
    <link rel="stylesheet" href="{{ absolute_url(asset('/build/css/date-picker/daterangepicker.css')) }}" />
    <link rel="stylesheet" href="{{ absolute_url(asset('/build/css/bootstrap.css')) }}" />
    <link rel="stylesheet" href="{{ absolute_url(asset('/build/css/fontawesome.css'))}}" />
    <link rel="stylesheet" href="{{ absolute_url(asset('/build/css/style.css')) }}" />
    <style>
        .nature{
            font-weight: bold;
            display: inline-block;
        }
        .nature:first-letter{
            text-transform: capitalize;
        }

        .contenu{
            display: inline-block;
        }
        .contenu:first-letter{
            text-transform: capitalize!important;
        }
    </style>
    {% block stylesheets %}
        {#{{ encore_entry_link_tags('app') }}#}
    {% endblock %}

    {% block javascripts %}
        {#{{ encore_entry_script_tags('app') }}#}
    {% endblock %}
</head>
<body>

<div class="container" style="margin-top: 3em">
    <div class="row">
    </div>
    <div class="row">
        <div class="col col-12">
            <h3>Rapport hebdomadaire du
                <span style="text-transform: capitalize">{{ start["date_literal"] }}</span> au
                <span style="text-transform: capitalize">{{ end["date_literal"] }}</span>
            </h3>
            <hr>
        </div>
        <div class="row">
            {% for categorie in categories%}
               <div class="col col-12" style="text-align: justify; text-justify: inter-word">
                   <h4 style="color: navy">
                       {{ categorie.categorie.nom }}
                       <hr>
                   </h4>
                   {% for recueil in categorie.recueils%}
                       <p style="margin-top: 1em">
                           <span class="nature">{{ recueil.nature }}</span><br>
                           <span style="text-transform: capitalize"> {{ recueil.source.libelle }}</span><br>
                           <span class="contenu">{{ recueil.contenu }}</span><br>
                           <small style="font-style: italic" class="text-danger">{{ recueil.utilisateur.nom }} {{ recueil.utilisateur.prenom }}</small>

                       </p>
                   {% endfor %}
               </div>
            {% endfor %}
        </div>


    </div>
</div>
<script  src="{{ absolute_url(asset('/build/js/jquery/jquery.js'))}}"></script>
<script src="{{ absolute_url(asset('/build/js/bootstrap.js'))}}"></script>
{% block bottom_js %}
{% endblock %}
</body>
</html>
